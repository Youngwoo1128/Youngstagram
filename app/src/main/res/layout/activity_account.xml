<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.AccountActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_account_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="#ff333333"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:onClick="clickSave"
            android:textColor="#ff333333"
            android:textSize="16sp"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <EditText
        android:id="@+id/edit_text_account_activity_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/account_activity_edit_text_shape"
        android:padding="8dp"
        android:layout_centerInParent="true"
        android:hint="id"/>

    <Button
        android:id="@+id/btn_checkId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복확인"
        android:layout_below="@id/edit_text_account_activity_id"
        android:layout_centerHorizontal="true"
        android:onClick="clickCheckId"/>

    <EditText
        android:id="@+id/edit_text_account_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/account_activity_edit_text_shape"
        android:layout_below="@id/btn_checkId"
        android:padding="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:hint="name"/>

</RelativeLayout>