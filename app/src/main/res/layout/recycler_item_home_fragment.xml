<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_profile_home_fragment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/instaprofile01"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/tv_id_home_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/civ_profile_home_fragment"
            android:layout_marginTop="36sp"
            android:text="moondroid"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bottom_main_my_page"
            android:layout_alignRight="@id/tv_id_home_fragment"
            android:layout_marginTop="36dp"
            android:layout_marginRight="16dp"/>
    </RelativeLayout>



    <ImageView
        android:id="@+id/iv_image_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/instaprofile03"
        android:layout_below="@id/civ_profile_home_fragment"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ic_favorite_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bottom_main_favorite"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/ic_message_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_message_home_fragment"
            android:layout_toRightOf="@id/ic_favorite_home_fragment"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/ic_send_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_fragment_option_send"
            android:layout_toRightOf="@id/ic_message_home_fragment"
            android:layout_margin="8dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ic_favorite_home_fragment"
            android:background="#ff888888"/>
    </RelativeLayout>


</LinearLayout>